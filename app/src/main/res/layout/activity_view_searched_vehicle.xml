<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_reset_password">

    <Button
        android:id="@+id/back_arrow_to_search_vehicle"
        android:layout_width="80dp"
        android:layout_height="21dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="367dp"
        android:layout_marginRight="367dp"
        android:background="@drawable/ic_backarrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/view_vehicle_layout"
                android:layout_width="match_parent"
                android:layout_height="1300dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vehicle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="@string/vehicle_name"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/recycler_vehicle_img"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@mipmap/ic_launcher" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/vehicle_features_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:text="@string/vehicle_features"
                        android:textAlignment="textStart"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/vehicle_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="6dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="end"
                        android:text="@string/vehicle_price"
                        android:textAlignment="textEnd"
                        android:textColor="@color/green"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/air_condition_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="50dp"
                        android:drawableStart="@drawable/ic_baseline_done_24"
                        android:drawableLeft="@drawable/ic_baseline_done_24"
                        android:fontFamily="@font/montserrat"
                        android:text="  Air Condition"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/power_mirror_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="80dp"
                        android:drawableStart="@drawable/ic_baseline_done_24"
                        android:drawableLeft="@drawable/ic_baseline_done_24"
                        android:fontFamily="@font/montserrat"
                        android:text="  Power Mirror"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/power_steering_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="190dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="50dp"
                        android:drawableStart="@drawable/ic_baseline_done_24"
                        android:drawableLeft="@drawable/ic_baseline_done_24"
                        android:fontFamily="@font/montserrat"
                        android:text="  Power Steering"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/power_window_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="190dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="80dp"
                        android:drawableStart="@drawable/ic_baseline_done_24"
                        android:drawableLeft="@drawable/ic_baseline_done_24"
                        android:fontFamily="@font/montserrat"
                        android:text="  Power Window"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/vehicle_specifications_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="130dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:text="@string/vehicle_specifications"
                        android:textAlignment="textStart"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="170dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/vehicle_specifications_engine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/specifications_frame"
                            android:drawableTop="@drawable/vehicle_engine"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_specification_engine"
                            android:textAlignment="textStart"
                            android:textColor="@color/lightBlue"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/vehicle_type"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="190dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/specifications_frame"
                            android:drawableTop="@drawable/vehicle_transmission"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_specification_transmission"
                            android:textAlignment="center"
                            android:textColor="@color/lightBlue"
                            android:textSize="18dp"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:id="@+id/vehicle_specifications_year"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/specifications_frame"
                            android:drawableTop="@drawable/vehicle_calender"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_specification_year"
                            android:textAlignment="textStart"
                            android:textColor="@color/lightBlue"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/vehicle_specifications_condition"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="190dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/specifications_frame"
                            android:drawableTop="@drawable/vehicle_condition"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_specification_condition"
                            android:textAlignment="textStart"
                            android:textColor="@color/lightBlue"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/vehicle_mileage"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="198dp"
                            android:background="@drawable/specifications_frame"
                            android:drawableTop="@drawable/vehicle_dashboard"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_specification_mileage"
                            android:textAlignment="textStart"
                            android:textColor="@color/lightBlue"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/vehicle_specifications_fuel_type"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="190dp"
                            android:layout_marginTop="198dp"
                            android:background="@drawable/specifications_frame"
                            android:drawableTop="@drawable/vehicle_fuel"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_specification_fuel"
                            android:textAlignment="textStart"
                            android:textColor="@color/lightBlue"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/vehicle_description_topic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="300dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="start"
                            android:text="@string/vehicle_description"
                            android:textAlignment="textStart"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <MultiAutoCompleteTextView
                            android:id="@+id/vehicle_description_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="340dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_description_area"
                            android:textAlignment="textStart"
                            android:textColor="@color/textColor"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/vehicle_contact_info_topic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="420dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="start"
                            android:text="Contact Info"
                            android:textAlignment="textStart"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="425dp"
                            android:layout_marginBottom="460dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/mobile_no_call"
                                    android:layout_width="139dp"
                                    android:layout_height="48dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserrat"
                                    android:gravity="center"
                                    android:text="077-1224833"
                                    android:textColor="@color/textColor"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/vehicle_call"
                                    android:layout_width="165dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/call_now_btn"
                                    android:drawableStart="@drawable/ic_baseline_local_phone_24"
                                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                                    android:fontFamily="@font/montserrat"
                                    android:gravity="center"
                                    android:padding="15dp"
                                    android:text="Call Now"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="510dp"
                            android:layout_marginBottom="800dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/mobile_no_msg"
                                    android:layout_width="146dp"
                                    android:layout_height="47dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserrat"
                                    android:gravity="center"
                                    android:text="077-1224833"
                                    android:textColor="@color/textColor"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/vehicle_message"
                                    android:layout_width="175dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/msg_btn"
                                    android:drawableStart="@drawable/ic_baseline_message"
                                    android:drawableLeft="@drawable/ic_baseline_message"
                                    android:fontFamily="@font/montserrat"
                                    android:gravity="center"
                                    android:padding="18dp"
                                    android:text="Message"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/vehicle_owner_details"
                            android:layout_width="244dp"
                            android:layout_height="89dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="69dp"
                            android:layout_marginLeft="69dp"
                            android:layout_marginTop="620dp"
                            android:layout_marginEnd="69dp"
                            android:layout_marginRight="69dp"
                            android:layout_marginBottom="50dp"
                            android:background="@drawable/vehicle_owner"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="@string/vehicle_specification_engine"
                            android:textAlignment="textStart"
                            android:textColor="@color/lightBlue"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="71dp"
                            android:layout_marginStart="90dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="630dp"
                            android:layout_marginEnd="108.5dp"
                            android:layout_marginRight="108.5dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/man_profile_img" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="635dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="W.P.A.Peiris"
                            android:textColor="@color/textColor"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/vehicle_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="665dp"
                            android:layout_marginBottom="20dp"
                            android:drawableStart="@drawable/ic_baseline_location_on_24"
                            android:drawableLeft="@drawable/ic_baseline_location_on_24"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/vehicle_location_view"
                            android:textColor="@color/lightBlue"
                            android:textSize="16dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>

</RelativeLayout>